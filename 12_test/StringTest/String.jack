/**
 * Represents character strings. In addition for constructing and disposing
 * strings, the class features methods for getting and setting individual
 * characters of the string, for erasing the string's last character,
 * for appending a character to the string's end, and more typical
 * string-oriented operations.
 */
class String {
	field Array newString;
	field int length;

    /** constructs a new empty string with a maximum length of maxLength
     *  and initial length of 0. */
    constructor String new(int maxLength) {
	var int count;
	let length = 0;
	let newString = Array.new(maxLength);
	while (count < maxLength)
	{
		let newString[count] = 0;
		let count = count + 1;
	}
	return this;
    }

    /** Disposes this string. */
    method void dispose() {
	do Memory.deAlloc(this);
	return;
    }

    /** Returns the current length of this string. */
    method int length() {
	var Array thisArray;
	var int count, maxLength;
	let thisArray = this;
	let count = 0;
	// let maxLength = thisArray[-1];
	while ( ~thisArray[count])
		{
			let count = count + 1;
		}
	return count;
    }

    /** Returns the character at the j-th location of this string. */
    method char charAt(int j) {
	var int character;
	var Array thisArray;
	let thisArray = this;
	let character = thisArray[j];
	return character;
    }

    /** Sets the character at the j-th location of this string to c. */
    method void setCharAt(int j, char c) {
	var Array thisArray;
	let thisArray = this;
	let thisArray[j] = c;
	return;
    }

    /** Appends c to this string's end and returns this string. */
    method String appendChar(char c) {
	var int stringLength;
	var Array thisArray;
	let thisArray = this;
	let stringLength = length();
	if(stringLength = 0) 
	{ }
	else 
	{ 
		let thisArray[stringLength] = c;
	}
	return this;
    }

    /** Erases the last character from this string. */
    method void eraseLastChar() {
	var int stringLength;
	var Array thisArray;
	let thisArray = this;
	let stringLength = length();
	if(stringLength = 0) 
	{ }
	else 
	{ 
		let thisArray[stringLength] = 0;
	}
	return;
    }

    /** Returns the integer value of this string, 
     *  until a non-digit character is detected. */
    method int intValue() {
	var int i, v, d;
	var Array thisArray;
	let thisArray = this;
	let v = 0;
	let i = 0;
	while (i < length())
		{
			let d = thisArray[i] - 48;
			let v = v * 10 + d;
			let i = i + 1;
		}
	return v;
    }

    /** Sets this string to hold a representation of the given value. */
    method void setInt(int val) {
	var int lastDigit, nDiv10;
	let nDiv10 = Math.divide(val,10);
	let lastDigit = val - (nDiv10 * val) + 48;
	if (lastDigit < 10)
	{
		do appendChar(lastDigit);
		return;
	}
	else
	{
		do setInt(nDiv10);
		 
	}
	return;
    }

    /** Returns the new line character. (128) */
    function char newLine() {
	return 128;
    }

    /** Returns the backspace character. (129) */
    function char backSpace() {
	return 129;
    }

    /** Returns the double quote (") character. (34) */
    function char doubleQuote() {
	return 34;
    }

}
